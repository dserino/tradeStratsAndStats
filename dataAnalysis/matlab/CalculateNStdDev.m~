function [Mu,Sigma,Kappa] = CalculateNStdDev(adjClose,Open,N,Ns)
  
% get 10 day avg and stdDev of adjClose
  Mu = zeros(Ns,N);
  Sigma = zeros(Ns,N);
  Kappa = zeros(Ns,N);
for n = 1:N
  if n >= 10
    Mu(:,n)    = adjClose(:,(n-9):n)*ones(10,1)/10;
    Sigma(:,n) = sqrt( (adjClose(:,(n-9):n)-Mu(:,(n-9):n)).^2 ...
                       *ones(10,1)/10 );
    if n < N
      Kappa(:,n) = (Open(:,n+1)-Mu(:,n))./Sigma(:,n);
    end
  end
end
  
end